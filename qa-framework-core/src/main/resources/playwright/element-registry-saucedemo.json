{
  "version": "1.0",
  "application": "Sauce Demo",
  "baseUrl": "https://www.saucedemo.com",
  "pages": [
    {
      "name": "LoginPage",
      "url": "/",
      "description": "User authentication page",
      "elements": [
        {
          "name": "usernameInput",
          "description": "Username text field",
          "primarySelector": "testid=username",
          "playwrightCode": "page.getByTestId(\"username\")",
          "fallbacks": [
            "page.locator(\"#user-name\")",
            "page.locator(\"[name='user-name']\")"
          ],
          "actions": ["fill", "clear"],
          "validations": ["isVisible", "isEditable"]
        },
        {
          "name": "passwordInput",
          "description": "Password text field",
          "primarySelector": "testid=password",
          "playwrightCode": "page.getByTestId(\"password\")",
          "fallbacks": [
            "page.locator(\"#password\")"
          ],
          "actions": ["fill", "clear"],
          "validations": ["isVisible", "isEditable"]
        },
        {
          "name": "loginButton",
          "description": "Login submit button",
          "primarySelector": "testid=login-button",
          "playwrightCode": "page.getByTestId(\"login-button\")",
          "fallbacks": [
            "page.locator(\"#login-button\")",
            "page.locator(\"input[type='submit']\")"
          ],
          "actions": ["click"],
          "validations": ["isVisible", "isEnabled"]
        },
        {
          "name": "errorMessage",
          "description": "Login error message",
          "primarySelector": "css=[data-test='error']",
          "playwrightCode": "page.locator(\"[data-test='error']\")",
          "fallbacks": [
            "page.locator(\".error-message-container h3\")"
          ],
          "actions": [],
          "validations": ["isVisible", "hasText"]
        }
      ]
    }
  ]
}